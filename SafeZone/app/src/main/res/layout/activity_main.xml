<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolsrestrepo.safezone.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_bottomBar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/init" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="162dp"
            android:text="Safe Zone"
            android:textColor="@color/blue"
            android:textSize="50sp"
            android:textStyle="bold"
            app:fontFamily="@font/acme" />



    </FrameLayout>



    <LinearLayout
        android:id="@+id/main_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/signup"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/signup"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/yellow"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="@string/login"
            android:textSize="20sp"/>
    </LinearLayout>


</android.widget.RelativeLayout>
